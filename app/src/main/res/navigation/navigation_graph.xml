<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/userRegistration">

    <fragment
        android:id="@+id/navigationButton"
        android:name="com.example.theelephant.NavigationButton"
        android:label="fragment_navigation_button"
        tools:layout="@layout/fragment_navigation_button" />
    <fragment
        android:id="@+id/userRegistration"
        android:name="com.example.theelephant.UserRegistration"
        android:label="fragment_user_registration"
        tools:layout="@layout/fragment_user_registration" >
        <action
            android:id="@+id/action_userRegistration_to_navigationButton"
            app:destination="@id/navigationButton" />
        <action
            android:id="@+id/action_userRegistration_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.theelephant.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
</navigation>